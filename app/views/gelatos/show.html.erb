	<h2><%= @gelato.flavor %></h2>
	<img src = <%= @gelato.image %> >

	<h4><%= @gelato.sale_message %></h4>
	<p>class='<%= "red-price" if @gelato.discounted? %>'>Price: <%= number_to_currency(@gelato.price) %></p>
	<h4><%= number_to_currency(@gelato.tax) %></h4>
	<h4><%= @gelato.total %></h4>

	<h3><%= @gelato.description %></h3>

	<div class="col-md-6">
		<img src="<%= @gelato.first_image_url %>" alt="<%= @gelato.flavor %>" class="img-responsive show-product">
	</div>

	<p>Categories</p>
	<% @gelato.categories.each do |category| %>
		<p><%= @category.name %></p>
	<% end %>

	<h5><%= @gelato.supplier.name %></h5>

	<%= form_tag '/orders', method: :post do %>

		<div>
			<%= label_tag :gelato_id %>
			<%= text_field_tag :quantity, nil, placeholder: "Quantity" %>

		</div>

		<div>
			<%= hidden_field_tag :gelato_id, @gelato.id %>
			<%= submit_tag "Add to Cart", class: "btn btn-primary" %>

